{
  "name": "@emergent/skills",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "emergent-skills": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint . --cache --cache-location node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/eslint/",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "clean": "rimraf dist .turbo"
  },
  "dependencies": {
    "@emergent/shared": "workspace:*",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.0"
  }
}
