{
  "name": "@detergent/skills",
  "version": "0.1.4",
  "description": "CLI for the Detergent Skills Marketplace",
  "type": "module",
  "bin": {
    "detergent-skills": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist .turbo",
    "dev": "tsx src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "lint": "eslint . --cache --cache-location node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/eslint/",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@emergent/api": "workspace:*",
    "@emergent/shared": "workspace:*",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "hono": "^4.7.0",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.0"
  }
}
